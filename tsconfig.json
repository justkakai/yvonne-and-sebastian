{
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "esnext",
		"target": "esnext",
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		],
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"jsx": "react",
		"skipLibCheck": true,
		"allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"paths": {
			"@/*": [
				"src/*"
			],
			"@public/*": [
				"public/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx"
	]
}
